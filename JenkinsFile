pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                sh 'scp ./index.nginx-debian.html root@172.17.0.3:/var/www/html/'
                sh 'scp ./index.nginx-debian.html root@172.17.0.5:/var/www/html/'
            }
        }
        stage('test') {
            steps {
                sh 'curl localhost:1000'
                sh 'curl localhost:2000'
            }
        }
    }
}